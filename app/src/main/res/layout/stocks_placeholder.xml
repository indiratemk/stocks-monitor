        <View
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:background="@color/grey_100"
            android:layout_marginBottom="8dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:background="@color/grey_100"
            android:layout_marginBottom="8dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:background="@color/grey_100"
            android:layout_marginBottom="8dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:background="@color/grey_100"
            android:layout_marginBottom="8dp" />
    </LinearLayout>
</com.facebook.shimmer.ShimmerFrameLayout>