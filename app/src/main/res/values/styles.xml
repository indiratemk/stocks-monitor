<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/black</item>
    </style>

    <style name="PrimarySemiBoldText11" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="PrimarySemiBoldText12" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="PrimarySemiBoldText16" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="PrimaryBoldText28" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="PrimaryBoldText18" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/montserrat_bold</item>
    </style>

    <style name="SecondaryBoldText18" parent="PrimaryBoldText18">
        <item name="android:textColor">@color/grey_200</item>
    </style>

    <style name="TabButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="background">@android:color/transparent</item>
    </style>

    <style name="HintButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/shp_hint_bg</item>
        <item name="android:textAppearance">@style/PrimarySemiBoldText12</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>
</resources>